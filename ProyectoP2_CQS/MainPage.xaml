    <Grid>
        --><!-- Definir las filas del Grid: una para la línea superior y otra para el contenido principal --><!--
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            --><!-- Línea superior --><!--
            <RowDefinition Height="*" />
            --><!-- Contenido principal --><!--
        </Grid.RowDefinitions>

        --><!-- Línea superior con dos ImageButton --><!--
        <Grid Grid.Row="0"
              BackgroundColor="#2B3F42"
              Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                --><!-- Botón de opciones --><!--
                <ColumnDefinition Width="*" />
                --><!-- Espacio flexible --><!--
                <ColumnDefinition Width="Auto" />
                --><!-- Botón de usuario --><!--
            </Grid.ColumnDefinitions>

            --><!-- ImageButton de opciones a la izquierda --><!--
            <ImageButton Grid.Column="0"
                         Source="menu.png"
                         WidthRequest="40"
                         HeightRequest="40"
                         BackgroundColor="Transparent"
                         Clicked="ImageButton_Clicked"/>

            --><!-- ImageButton de usuario a la derecha --><!--
            <ImageButton Grid.Column="2"
                         Source="user.png"
                         WidthRequest="40"
                         HeightRequest="40"
                         BackgroundColor="Transparent"
                         Clicked="ImageButton_Clicked_1"/>
        </Grid>
        <Grid Grid.Row="1"
              Padding="10">
            <SearchBar Placeholder="Buscar..."
                       HorizontalOptions="FillAndExpand"
                       SearchButtonPressed="SearchBar_SearchButtonPressed"/>
        </Grid>
        --><!-- Contenido principal de la página --><!--
        <ScrollView Grid.Row="1">
            <StackLayout Padding="10">
                --><!-- Tu contenido principal aquí --><!--
                <Label Text="Contenido principal de la página"
                       FontSize="24"
                       HorizontalOptions="Center"
                       VerticalOptions="CenterAndExpand"/>
            </StackLayout>
        
            
        </ScrollView>
    </Grid>
