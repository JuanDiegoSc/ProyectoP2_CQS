@{
    ViewData["Title"] = "Lista de Reseñas";
}
<div class="container mt-4">
    <div class="row"
        <div class="col-8">
            <h2 class="text-bg-primary">Lista de Reseñas</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i>Crear nueva Reseña</a>
        </div>
     </div>

    <br />
    <br />
    <table id="tblResenas" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Puntuacion</th>
                <th>Comentario</th>
                <th>Juego</th>
                <th>Fecha Reseña</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/resenas.js"></script>
}

