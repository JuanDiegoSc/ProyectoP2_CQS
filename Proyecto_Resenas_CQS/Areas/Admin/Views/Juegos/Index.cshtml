@{
    ViewData["Title"] = "Juegos";
}
<div class="container mt-4">
    <div class="row"
        <div class="col-8">
            <h2 class="text-bg-primary">Lista de Juegos</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i>Crear nueva Juego</a>
        </div>
     </div>

    <br />
    <br />
    <table id="tblJuegos" class="table table-striped table-bordered" style="width: 100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Categoría</th>
                <th>Imagen</th>
                <th>Fecha creación</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/juegos.js"></script>
}

